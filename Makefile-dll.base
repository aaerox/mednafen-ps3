export TOP := $(dir $(lastword $(MAKEFILE_LIST)))

.SUFFIXES:

AR			:= $(PREFIX)ar
AS			:= $(PREFIX)gcc
CC			:= $(PREFIX)gcc
CXX			:= $(PREFIX)g++
LD			:= $(CXX)

CFLAGS		+= -DMLDLL -fPIC -fvisibility=hidden -g -O3 -std=gnu99 -DLSB_FIRST -DSIZEOF_DOUBLE=8 -DHAVE_MKDIR -DWORDS_LITTLEENDIAN
CXXFLAGS	+= -DMLDLL -fPIC -fvisibility=hidden -g -O3 -DLSB_FIRST -DSIZEOF_DOUBLE=8 -DHAVE_MKDIR -DWORDS_LITTLEENDIAN
DEPSOPTIONS	=  -MMD -MP -MF $(DEPSDIR)/$*.d

###
include $(TOP)/Makefile.common
###

